<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>jdbc-url</param-name>
        <param-value>jdbc:hsqldb:hsql://localhost/dummy-url</param-value>
    </context-param>
    <context-param>
        <param-name>database-user</param-name>
        <param-value>SA</param-value>
    </context-param>
    <context-param>
        <param-name>database-password</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>driver-class-name</param-name>
        <param-value>org.hsqldb.jdbc.JDBCDriver</param-value>
    </context-param>
    <context-param>
        <param-name>pool-size</param-name>
        <param-value>10</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>EntryPoint</servlet-name>
        <servlet-class>by.bsuir.poit.servlets.GateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EntryPoint</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
</web-app>
