<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>jdbc-url</param-name>
        <param-value>jdbc:hsqldb:hsql://localhost/dummy-url</param-value>
    </context-param>
    <context-param>
        <param-name>database-user</param-name>
        <param-value>SA</param-value>
    </context-param>
    <context-param>
        <param-name>database-password</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>driver-class-name</param-name>
        <param-value>org.hsqldb.jdbc.JDBCDriver</param-value>
    </context-param>
    <context-param>
        <param-name>pool-size</param-name>
        <param-value>10</param-value>
    </context-param>
    <context-param>
        <param-name>mappers-beans-package</param-name>
        <param-value>by.bsuir.poit.bean.mappers</param-value>
    </context-param>
    <context-param>
        <param-name>dao-beans-package</param-name>
        <param-value>by.bsuir.poit.dao</param-value>
    </context-param>
    <context-param>
        <param-name>service-beans-package</param-name>
        <param-value>by.bsuir.poit</param-value>
    </context-param>
    <display-name>JDBC Project</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <jsp-file>/roles/admin.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ClientController</servlet-name>
        <jsp-file>/roles/client.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientController</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>by.bsuir.poit.services.exception.resources.ResourceException</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>by.bsuir.poit.services.exception.authorization.AuthorizationException</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <!--        default exception page for all -->
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
