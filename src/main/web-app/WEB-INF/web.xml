<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>jdbc-url</param-name>
        <param-value>jdbc:hsqldb:hsql://localhost/dummy-url</param-value>
    </context-param>
    <context-param>
        <param-name>database-user</param-name>
        <param-value>SA</param-value>
    </context-param>
    <context-param>
        <param-name>database-password</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>driver-class-name</param-name>
        <param-value>org.hsqldb.jdbc.JDBCDriver</param-value>
    </context-param>
    <context-param>
        <param-name>pool-size</param-name>
        <param-value>10</param-value>
    </context-param>
    <context-param>
        <param-name>mappers-beans-package</param-name>
        <param-value>by.bsuir.poit.bean.mappers</param-value>
    </context-param>
    <context-param>
        <param-name>dao-beans-package</param-name>
        <param-value>by.bsuir.poit.dao</param-value>
    </context-param>
    <context-param>
        <param-name>service-beans-package</param-name>
        <param-value>by.bsuir.poit</param-value>
    </context-param>
    <display-name>JDBC Project</display-name>
    <filter-mapping>
        <filter-name>authenticator</filter-name>
        <url-pattern>/api/auth</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>principal-builder</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>access</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>params-resolver</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ErrorPage</servlet-name>
        <jsp-file>/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <jsp-file>/roles/admin.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ClientPage</servlet-name>
        <jsp-file>/roles/client.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AuctionPage</servlet-name>
        <jsp-file>/auction.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AssignmentPage</servlet-name>
        <jsp-file>/assignment.jsp</jsp-file>
    </servlet>
    <!--    pages mapping-->
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
<!--        <url-pattern>/</url-pattern>-->
        <url-pattern>/lobby</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorPage</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientPage</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuctionPage</servlet-name>
        <url-pattern>/auction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentPage</servlet-name>
        <url-pattern>/assignment</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>403</error-code>
        <location>/error</location>
    </error-page>
</web-app>
