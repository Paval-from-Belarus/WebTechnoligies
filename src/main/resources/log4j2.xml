<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Configurations" status="INFO" monitorInterval="5">
    <Properties>
        <Property name="log-path">logs</Property>
        <Property name="archive">${log-path}/archive</Property>
    </Properties>
    <Appenders>
        <Console name="ErrorOut" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t]: %m%n"/>
        </Console>
        <Console name="Default" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p%n"/>
        </Console>
        <File name="FileOut" fileName="${log-path}/server.logs">
            <PatternLayout pattern="%d{hh:mms yyyy:mm:ss} %-5p [%t] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="org.iuwteam.httpserver.Server" level="warn" additivity="false">
            <AppenderRef ref="FileOut"/>
        </Logger>
        <Logger name="org.iuwteam.httpserver.Server" level="error" additivity="true">
            <AppenderRef ref="ErrorOut"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Default"/>
        </Root>
    </Loggers>
</Configuration>